.container {
    margin: 0px;
    flex: 1;
    flex-direction: row;
}

.VerticalSplit {
    flex-direction: column;
}

.HorizontalSplit {
    flex-direction: row;
}

#viewContainer {
    flex-shrink: 0;
}

.oneView > #firstView {
    flex: 1;
}

.oneView > #secondView {
    flex: 0;
}

.twoViews > #firstView {
    flex: 0.5;
}

.twoViews > #secondView {
    flex: 0.5;
}


.showEnvironmentPanel > #environmentContainer {
	width: 200px;
}

#toolbar {
    flex-direction: row;
}

#toolbar > #toolbarRadio {
    flex-direction: row;
}

.unity-toggle__input > .unity-image {
    padding-top: 2px;
    padding-right: 2px;
    padding-bottom: 2px;
    padding-left: 1px;
}


